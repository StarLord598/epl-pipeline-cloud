# ===========================================
# EPL Pipeline â€” Environment Configuration
# ===========================================
# Copy to .env and fill in your values:
#   cp .env.example .env

# --- Data Sources ---
FOOTBALL_DATA_API_KEY=your-key-from-football-data.org

# --- Postgres (used by docker-compose) ---
# IMPORTANT: Change these in production!
POSTGRES_USER=airflow
POSTGRES_PASSWORD=airflow
POSTGRES_DB=airflow

# --- Airflow ---
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql+psycopg2://airflow:airflow@postgres/airflow
AIRFLOW__CORE__LOAD_EXAMPLES=false

# IMPORTANT: Generate a strong Fernet key before deploying:
#   python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
AIRFLOW__CORE__FERNET_KEY=

# IMPORTANT: Generate a strong secret key before deploying:
#   python -c "import secrets; print(secrets.token_urlsafe(32))"
AIRFLOW__WEBSERVER__SECRET_KEY=change-me-generate-a-real-secret

# IMPORTANT: Change the admin password before deploying:
AIRFLOW_ADMIN_PASSWORD=admin

# --- Local DuckDB ---
EPL_DB_PATH=/opt/airflow/data/epl_pipeline.duckdb
DBT_TARGET=local
